// @import '~@/assets/css/mixin.styl'
.dialog-wrap {
}
.dialog-cover {
  background #000
  opacity 0.7
  position absolute
  z-index 999
  top 0
  left 0
  bottom 0
  right 0
}
.dialog-content {
  position fixed
  left 50%
  top 50%
  z-index 1999
  background-size cover
  line-height 1.6
  transform translate3d(-50%, -50%, 0)
}
.dialog-close {
  position absolute
  right -10px
  top -60px
  text-align center
  cursor pointer
  font-size 60px
  color #fff
  line-height 50px
  padding 0 12px
  trans()
}
.dialog-close:hover {
  opacity 0.9
}
.close {
  position absolute
  right -50px
  top -50px
  width 60px
  height @width
  background url('./img/close.png')
  background-size cover
  cursor pointer
  &:hover {
    opacity 0.9
  }
}