.menu {
  position fixed
  right 0
  top 0
  z-index 888
  background rgba(0, 0, 0, 0.7)
  padding 15px 0 5px 15px
  border-radius 0px 0px 0px 70px
  .item {
    background-image linear-gradient(233deg, #88004A 6%, #F4249F 90%)
    display flex
    align-items center
    justify-content center
    width 220px
    height 66px
    margin-bottom 10px
    position relative
    border-radius 100px 0px 0px 100px
    .badge-arrow {
      position absolute
      left 0
      top 50%
      transform translate3d(0, -50%, 0)
      opacity 0
      height 0
      width 0
      border 12px solid transparent
      border-right-color #fff
    }
    .logo {
      margin-left 30px
      margin-right 20px
    }
    .text {
      color #FEA501
      text-align center
      h3 {
        font-size 26px
        color #FEA501
        font-weight normal
      }
      p {
        font-size 12px
        margin-top 10px
      }
    }
    .arrow {
      color #fff
      font-size 24px
      margin-left 15px
      opacity 0
    }
    &.router-link-active {
      background-image linear-gradient(270deg, #F4249F 0%, #4C022A 100%)
      border 1px solid rgba(254, 165, 1, 1)
      .text {
        h3 {
          color #fff
        }
      }
      .badge-arrow {
        opacity 1
      }
    }
    &.waiting {
      .text {
        line-height 1
        p.tt{
          color #fff
          margin-top 3px
          transform: scale(.9)
        }
      }
    }
  }
}